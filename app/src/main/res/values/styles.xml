<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <!--<item name="colorPrimaryLight">@color/primary_100</item>-->
        <item name="colorPrimaryDark">@color/primary_800</item>
        <!--<item name="colorSecondary">@color/secondary_800</item>-->
        <!--<item name="colorSecondaryLight">@color/secondary_100</item>-->
        <!--<item name="colorSecondaryDark">@color/secondary_800</item>-->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/primary_500</item>

        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <!--Toolbar-->
    <style name="AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!--Title-->
    <style name="Title" parent="AppTheme" />

    <style name="Title.Recipe">
        <!--<item name="fontFamily">@font/montserrat_semibold</item>-->
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display3</item>
        <item name="android:textColor">@color/secondary_500</item>
    </style>
</resources>
